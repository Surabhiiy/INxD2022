function setup() {
  createCanvas(400, 400);
    background(0);
  colorMode(RGB,width)
}

function draw() {

if(mouseX<width&&mouseY<width){
   stroke(mouseX,mouseY,0)
   }
else if(mouseX<width&&mouseY>width){
           stroke(mouseX,0,mouseY)
        }
else if(mouseX>width&&mouseY<width){
           stroke(0,mouseX,mouseY)
        }
else{
     stroke(mouseY,mouseX,0)
}
    line(width/2,width,width-mouseX,width-mouseY)
  line(width,width/2,width-mouseX,width-mouseY)
      line(width/2,0,width-mouseX,mouseY)
  line(width,width/2,width-mouseX,mouseY)
        line(width/2,0,mouseX,mouseY)
  line(0,width/2,mouseX,mouseY)
          line(width/2,width,mouseX,width-mouseY)
  line(0,width/2,mouseX,width-mouseY)
}

function keyPressed() {
saveCanvas("Surabhi-art.png");
}
 
